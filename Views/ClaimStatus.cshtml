@{
    Layout = "_Layout";
    @model ClaimSystem.Models.Claim

    <h2>Submit Claim</h2>
    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
        <div>
            <label>Hours Worked:</label>
            <input asp-for="HoursWorked" type="number" required />
        </div>
        <div>
            <label>Hourly Rate:</label>
            <input asp-for="HourlyRate" type="number" required />
        </div>
        <div>
            <label>Additional Notes:</label>
            <textarea asp-for="AdditionalNotes"></textarea>
        </div>
        <div>
            <label>Upload Supporting Document:</label>
            <input type="file" name="document" accept=".pdf,.docx,.xlsx" />
        </div>
        <button type="submit">Submit</button>
    </form>

}
