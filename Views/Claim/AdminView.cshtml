@model List<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Admin Claim View";
}

<h2>Claims</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead style="background-color:chartreuse;">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Pay</th>
                <th>Additional Notes</th>
                <th>Status</th>
                <th>Reason for Rejection</th>
                <th>Submission Date</th>
                <th>Uploaded Document</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.LecturerEmail</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.TotalPay.ToString("C")</td>
                    <td>@claim.AdditionalNotes</td>
                    <td>@claim.Status</td>
                    <td>@claim.ReasonForRejection</td>
                    <td>@claim.SubmissionDate.ToString("g")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a href="@Url.Content(claim.DocumentPath)" target="_blank" class="btn btn-info">View Document</a>
                        }
                        else
                        {
                            <span>No Document Uploaded</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No claims need assessment at this time.
    </div>
}
