@model List<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Claim Status";
}

<h2>Claim Status</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead style="background-color:cornflowerblue;">
            <tr>
                <th>ID</th>
                <th>Lecturer Name</th>
                <th>Lecturer Email</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Pay</th> <!-- New column for Total Pay -->
                <th>Additional Notes</th>
                <th>Status</th>
                <th>Submission Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                // Calculate total pay
                var totalPay = claim.HoursWorked * claim.HourlyRate;

                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.LecturerEmail</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td> <!-- Format as currency -->
                    <td>@totalPay.ToString("C")</td>
                    <td>@claim.AdditionalNotes</td>
                    <td>@claim.Status</td>
                    <td>@claim.SubmissionDate.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No claims available at this time.
    </div>
}