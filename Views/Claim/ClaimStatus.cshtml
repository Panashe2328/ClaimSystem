@model List<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Claim Status";
}

<h2>Claim Status</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Lecturer Name</th>
                <th>Lecturer Email</th> <!-- Added lecturer email column -->
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Additional Notes</th> <!-- Added additional notes column -->
                <th>Status</th>
                <th>Submission Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.LecturerEmail</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.AdditionalNotes</td> 
                    <td>@claim.Status</td>
                    <td>@claim.SubmissionDate.ToString("g")</td> 
                    <td>
                        <a asp-action="ApproveClaim" asp-route-id="@claim.Id" class="btn btn-success">Approve</a>
                        <a asp-action="RejectClaim" asp-route-id="@claim.Id" class="btn btn-danger">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No claims available at this time.
    </div>
}
